{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-rational-order"
  ],
  "rules": {
    "property-no-vendor-prefix": [true, {
      "ignoreProperties": [
        "mask",
        "mask-size",
        "mask-position",
        "mask-repeat",
        "appearance",
        "text-size-adjust"
      ]
    }],
    "color-function-notation": "legacy",
    "alpha-value-notation": "number",
    "selector-class-pattern": "^([a-z][a-z0-9-_]*)(-[a-z0-9]+)*$"
  }
}
